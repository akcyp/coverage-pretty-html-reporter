{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentSize": 2,
    "indentStyle": "space",
    "ignore": ["**/dist", "**/node_modules", "**/coverage", "**/nyc-output"],
    "lineWidth": 160
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["**/dist", "**/node_modules", "**/coverage", "**/nyc-output"]
  }
}
